read -r -d '' page << EOM
---
pagetheme: "${1}"
header: "SUPPRESS"
nav: "SUPPRESS"
aside: "SUPPRESS"
footer: "SUPPRESS"
---
# Theme $1
$lpcontent
### *Everything but article* suppressed: header, nav, aside, footer
$lcpanel
EOM
echo $page >> $2/short_page_article_only.md
}

