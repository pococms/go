footer: "SUPPRESS"
---
# Theme $1
$hcontent
### *Everything* suppressed: header, nav, article, footer
$hcpanel
EOM
echo $page >> $2/long_page_no_everything.md
}


###########################################################
# GENERATE VARIATIONS ON THEMES, LOW-CONTENT PAGES
###########################################################

# -------------------------------------
# Low-content page, article only
# -------------------------------------
#
# $1 is the page theme
# $2 is the directory for the page
